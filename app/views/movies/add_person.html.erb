<h1>Add <%= @url.titlecase %></h1>

<form action="http://localhost:3000/create_<%= @url %>" class = "form-horizontal">
  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">Dob</label>
    <div class="col-sm-8">
      <input id="dob" class="form-control col-sm-10" type="string" name="dob" placeholder="Dob">
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-8">
      <input id="name" class="form-control col-sm-10" type="string" name="name" placeholder="Name">
    </div>
  </div>

  <div class="form-group">
    <label for="bio" class="col-sm-2 control-label">Bio</label>
    <div class="col-sm-8">
      <input id="bio" class="form-control col-sm-10" type="text" name="bio" placeholder="Bio">
    </div>
  </div>

  <div class="form-group">
    <label for="image" class="col-sm-2 control-label">Image url</label>
    <div class="col-sm-8">
      <input id="image" class="form-control col-sm-10" type="string" name="image_url" placeholder="Image url">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <button type="submit" class="btn btn-primary">Add <%= @url.titlecase %></button>
    </div>
  </div>

</form>
