<h1>Edit Movie</h1>

<form action="http://localhost:3000/update_movie/<%= @id %>" class = "form-horizontal">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-8">
      <input id="title" class="form-control col-sm-10" type="string" name="title" value="<%= @title %>">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">Year</label>
    <div class="col-sm-8">
      <input id="year" class="form-control col-sm-10" type="integer" name="year" value="<%= @year %>">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">Duration</label>
    <div class="col-sm-8">
      <input id="duration" class="form-control col-sm-10" type="string" name="duration" value="<%= @duration %>">
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8">
      <input id="description" class="form-control col-sm-10" type="text" name="description" value="<%= @description %>">
    </div>
  </div>


  <div class="form-group">
    <label for="image" class="col-sm-2 control-label">Image url</label>
    <div class="col-sm-8">
      <input id="image" class="form-control col-sm-10" type="string" name="image_url" value="<%= @image_url %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <button type="submit" class="btn btn-primary">Update Movie</button>
    </div>
  </div>

</form>
